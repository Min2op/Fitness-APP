<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileSetup"
    android:background="#44b2ed">

    <TextView
        android:id="@+id/UpdateProfileHeader"
        android:layout_width="209dp"
        android:layout_height="107dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="Update Profile"
        android:textColor="@color/black"
        android:textSize="35dp"

        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/uAge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.106" />

    <EditText
        android:id="@+id/uAge"
        android:layout_width="357dp"
        android:layout_height="77dp"
        android:layout_below="@+id/UpdateProfileHeader"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="436dp"
        android:background="#2387C7"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="15dp"
        android:hint="Age"
        android:padding="28dp"
        android:textColor="@color/white"
        android:textColorHint="#F5F5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/uweight"
        android:layout_width="357dp"
        android:layout_height="77dp"
        android:layout_below="@+id/uHeight"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="236dp"
        android:background="#2387C7"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="15dp"
        android:hint="Weight (kg)"
        android:padding="28dp"
        android:textColor="@color/white"
        android:textColorHint="#F5F5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/uHeight"
        android:layout_width="357dp"
        android:layout_height="77dp"
        android:layout_below="@+id/uAge"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="336dp"
        android:background="#2387C7"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="15dp"
        android:hint="Height (cm)"
        android:padding="28dp"
        android:textColor="@color/white"
        android:textColorHint="#F5F5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/uName"
        android:layout_width="357dp"
        android:layout_height="77dp"
        android:layout_below="@+id/uweight"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="136dp"
        android:background="#2387C7"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="15dp"
        android:hint="Name"
        android:padding="28dp"
        android:textColor="@color/white"
        android:textColorHint="#F5F5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/updateProfilebtn"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:background="#486BE8"
        android:text="Update Profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946" />
</androidx.constraintlayout.widget.ConstraintLayout>